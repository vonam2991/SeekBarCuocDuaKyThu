<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <CheckBox
        android:layout_marginBottom="35dp"
        android:layout_above="@id/checkbox2"
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:layout_marginBottom="35dp"
        android:layout_above="@id/checkbox3"
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/chuot"
        android:id="@+id/seekBar3"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/checkbox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/ech"
        android:id="@+id/seekBar2"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/checkbox2"
        android:layout_above="@id/seekBar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/rua"
        android:id="@+id/seekBar1"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/seekBar2"
        android:layout_toRightOf="@id/checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:maxHeight="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewDiem"
        android:textSize="40sp"
        android:text="100"
        android:textColor="#F44336"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="151dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/play" />
</RelativeLayout>